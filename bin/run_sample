#!/bin/bash
BIN_PATH="$(dirname `pwd`/$0)"
BASE_PATH="$BIN_PATH/.."
cd $BASE_PATH/sample

echo "-------------------------------------------------------------------------"
echo "RUN: WITHOUT THE SUBCOMMAND"
echo "========================================================================="
($BIN_PATH/gallium || exit 1);
echo "-------------------------------------------------------------------------"
echo "RUN: THE FILE LISTER COMMAND"
echo "========================================================================="
($BIN_PATH/gallium sample.file_lister ../ || exit 1);
echo "-------------------------------------------------------------------------"
echo "RUN: THE ARGS INSPECTOR (HELP)"
echo "========================================================================="
($BIN_PATH/g3 --debug-global args.inspect -h || exit 1);
echo "-------------------------------------------------------------------------"
echo "RUN: THE ARGS INSPECTOR (EXECUTE)"
echo "========================================================================="
($BIN_PATH/g3 --debug-global args.inspect || exit 1);
echo "-------------------------------------------------------------------------"
